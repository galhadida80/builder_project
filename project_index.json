{
  "project_type": "monorepo",
  "services": {
    "backend": {
      "path": "./backend",
      "tech_stack": ["python", "fastapi", "sqlalchemy", "pydantic", "alembic", "postgresql"],
      "port": 8000,
      "dev_command": "uvicorn app.main:app --reload --port 8000",
      "test_command": "pytest",
      "entry_point": "app/main.py"
    },
    "frontend": {
      "path": "./frontend",
      "tech_stack": ["typescript", "nextjs", "react", "material-ui", "emotion", "next-intl"],
      "port": 3000,
      "dev_command": "npm run dev",
      "test_command": "npm test",
      "entry_point": "app/layout.tsx"
    }
  },
  "infrastructure": {
    "docker": true,
    "docker_compose": true,
    "database": "postgresql",
    "migrations": "alembic",
    "task_queue": "celery",
    "cache": "redis"
  },
  "conventions": {
    "linter": "pylint",
    "formatter": "black",
    "testing": "pytest",
    "schema_validation": "pydantic v2",
    "type_hints": "python 3.10+ (Type | None syntax)",
    "frontend_routing": "Next.js App Router (file-based routing)",
    "frontend_components": "Material-UI with TypeScript",
    "i18n": "next-intl for frontend localization"
  }
}
