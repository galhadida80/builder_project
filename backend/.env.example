# Application Settings
APP_NAME="Construction Operations Platform"
DEBUG=false
ENVIRONMENT=development

# Security Configuration
# CRITICAL: These secrets are used for authentication and must be strong in production
# Weak secrets allow attackers to forge authentication tokens and bypass security
#
# SECRET_KEY: Used for JWT token signing - minimum 32 characters required
# Generate a strong secret with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=dev-secret-key-change-in-production-use-strong-random-key
#
# SCHEDULER_SECRET: Used for scheduled task authentication - minimum 32 characters required
# Generate a strong secret with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SCHEDULER_SECRET=dev-scheduler-secret-change-in-production-use-strong-random-key

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/builder_db
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/builder_db

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Storage Configuration
# Storage type: "local" for development, "s3" for production
STORAGE_TYPE=local

# Local Storage Settings (used when STORAGE_TYPE=local)
# Path where uploaded files will be stored on the local filesystem
LOCAL_STORAGE_PATH=./uploads

# S3 Storage Settings (required when STORAGE_TYPE=s3)
# AWS S3 bucket name for file storage
S3_BUCKET_NAME=
# AWS region where the S3 bucket is located
S3_REGION=us-east-1
# AWS access key ID with S3 read/write permissions
S3_ACCESS_KEY_ID=
# AWS secret access key
S3_SECRET_ACCESS_KEY=

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
# JSON array of allowed origins
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# API Configuration
API_V1_PREFIX=/api/v1
